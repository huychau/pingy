{
	"name": "pingy",
	"exportDir": "dist",
	"minify": true,
	"compile": true,
	"exclusions": [
		{
			"path": "node_modules",
			"action": "exclude",
			"type": "dir"
		},
    {
			"path": "views",
			"action": "exclude",
			"type": "dir"
    },
    {
      "path": "*.json",
      "action": "exclude",
      "type": "file"
    },
    {
      "path": "*.md",
      "action": "exclude",
      "type": "file"
    }
	],
	"port": 1234
}
